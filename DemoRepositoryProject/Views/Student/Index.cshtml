@model IEnumerable<StudentDTO>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://use.fontawesome.com/c7a575b4de.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<div class="container">
    <div class="top-buffer"></div>
    <div class="panel panel-primary">
        <div class="panel-heading panel-head">Students</div>
        <div class="panel-body">
            <div class="btn-group">
                <a data-toggle="modal" data-target="#modal-action-student" class="fa fa-pencil btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>  Add Student
                </a>
            </div>
            <br />
            <br />
            <div class="top-buffer"></div>
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Enrollment No</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.EnrollmentNo)</td>
                            <td>
                                <a id="editStudentModal" data-toggle="modal" asp-action="AddEditStudent" asp-route-id="@item.ID" data-target="#modal-action-student"
                                   class="fa fa-pencil btn btn-outline-success">
                                    <i class="glyphicon glyphicon-pencil"></i>  Edit
                                </a>
                                <a id="deleteStudentModal" data-toggle="modal" asp-action="DeleteStudent" asp-route-id="@item.ID" data-target="#modal-action-student" class="fa fa-trash-o btn btn-outline-danger">
                                    <i class="glyphicon glyphicon-trash"></i>  Delete
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_Modal" model='new StudentDTO()' />


@section scripts
{
    <script src="~/js/site.js" asp-append-version="true"></script>
}


